{
  "exclude": [
    "node_modules"
  ],
  "files": [
    "package.json"
  ],
  "include": [
    "build/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "ES2018"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "composite": true,
    "sourceMap": true,
    "declarationMap": true,
  }
}
